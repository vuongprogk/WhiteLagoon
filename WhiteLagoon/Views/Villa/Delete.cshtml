@model Villa

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Villa</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4 border">
        <form method="post" class="row">
            <input asp-for="ID" hidden />
            <div class="col-10">

                <div class="p-3">
                    @* <div asp-validation-summary="ModelOnly"></div> *@
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Name" disabled class="form-control border shadow" />
                        <label asp-for="Name" class="ms-2"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Description" disabled class="form-control border shadow" />
                        <label asp-for="Description" class="ms-2"></label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Price" disabled class="form-control border shadow" />
                        <label asp-for="Price" class="ms-2"></label>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="ImageUrl" disabled class="form-control border shadow" />
                        <label asp-for="Image" class="ms-2"></label>
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Sqm" disabled class="form-control border shadow" />
                        <label asp-for="Sqm" class="ms-2"></label>
                        <span asp-validation-for="Sqm" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Occupancy" disabled class="form-control border shadow" />
                        <label asp-for="Occupancy" class="ms-2"></label>
                        <span asp-validation-for="Occupancy" class="text-danger"></span>
                    </div>
                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-danger w-100"><i class="bi bi-trash-fill"> </i>Delete</button>
                        </div>
                        <div class="col-6 col-md-3">
                            <button asp-controller="Villa" asp-action="Index" class="btn btn-secondary w-100">
                                <i class="bi bi-x-circle-fill"></i> Cancel
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-2">
                <img src="@Model.ImageUrl" style="border-radius: 5px; border: 1px solid #bbb9b9" width="100%" />
            </div>
        </form>
    </div>
</div>
